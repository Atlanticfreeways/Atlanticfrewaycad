# Production Environment Configuration
# DO NOT commit actual production values

# PostgreSQL Configuration
POSTGRES_HOST=your-production-db-host
POSTGRES_PORT=5432
POSTGRES_DB=atlanticfrewaycard_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=<use-secrets-manager>
POSTGRES_POOL_SIZE=50

# Redis Configuration
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=<use-secrets-manager>

# JWT Configuration
JWT_SECRET=<use-secrets-manager-min-32-chars>
JWT_REFRESH_SECRET=<use-secrets-manager-min-32-chars>
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Marqeta Configuration
MARQETA_BASE_URL=https://api.marqeta.com/v3
MARQETA_APP_TOKEN=<use-secrets-manager>
MARQETA_ADMIN_TOKEN=<use-secrets-manager>

# Stripe Configuration
STRIPE_SECRET_KEY=<use-secrets-manager>
STRIPE_PUBLISHABLE_KEY=<use-secrets-manager>

# Crypto Services
COINBASE_API_KEY=<use-secrets-manager>
COINBASE_API_SECRET=<use-secrets-manager>

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=<use-secrets-manager>
FROM_EMAIL=noreply@atlanticfrewaycard.com

# Server Configuration
PORT=3000
NODE_ENV=production
API_BASE_URL=https://api.atlanticfrewaycard.com/api/v1

# KYC Service
KYC_PROVIDER=jumio
JUMIO_API_TOKEN=<use-secrets-manager>
JUMIO_API_SECRET=<use-secrets-manager>

# Security Configuration
ALLOWED_ORIGINS=https://atlanticfrewaycard.com,https://app.atlanticfrewaycard.com
LOG_LEVEL=warn
MARQETA_WEBHOOK_SECRET=<use-secrets-manager>
DB_SSL_CA_PATH=/etc/ssl/certs/ca-certificate.pem
