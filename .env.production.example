# Production Environment Configuration

# Server
NODE_ENV=production
PORT=3000

# Database - PostgreSQL
POSTGRES_HOST=your-production-db-host.com
POSTGRES_PORT=5432
POSTGRES_DB=atlanticfrewaycard_prod
POSTGRES_USER=atlanticfrewaycard_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_POOL_SIZE=20
DB_SSL_CA_PATH=/path/to/ca-certificate.pem

# Redis
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Security
JWT_SECRET=your-production-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-chars
ALLOWED_ORIGINS=https://app.atlanticfrewaycard.com,https://business.atlanticfrewaycard.com
MARQETA_WEBHOOK_SECRET=your-marqeta-webhook-secret

# Marqeta API
MARQETA_API_KEY=your-production-api-key
MARQETA_API_SECRET=your-production-api-secret
MARQETA_BASE_URL=https://api.marqeta.com
MARQETA_CARD_PRODUCT_TOKEN=your-card-product-token

# Logging
LOG_LEVEL=info

# Test Configuration (for CI/CD)
TEST_USER_EMAIL=test@atlanticfrewaycard.com
TEST_USER_PASSWORD=TestSecure123!@#
TEST_API_TOKEN=test-token-production
